@model MyPortfolioWebApp.Models.Board

@{
    ViewData["Title"] = "게시글 상세";
}

<section class="container mt-5">
    <h2 class="text-primary fw-bold mb-4">
        <i class="bi bi-info-circle me-2"></i>게시글 상세보기
    </h2>

    <div class="card shadow p-4 rounded-4 bg-light">
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-semibold">이메일</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3 fw-semibold">작성자</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Writer)</dd>

            <dt class="col-sm-3 fw-semibold">제목</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-3 fw-semibold">내용</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Contents)</dd>

            <dt class="col-sm-3 fw-semibold">작성일</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.PostDate)</dd>

            <dt class="col-sm-3 fw-semibold">조회수</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ReadCount)</dd>
        </dl>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> 목록으로
        </a>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
            <i class="bi bi-pencil-square me-1"></i> 수정
        </a>
    </div>
</section>
